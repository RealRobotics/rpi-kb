# Default environment variables for Docker Compose
# Copy this file to .env to customize values

# User and group IDs (automatically detected if not set)
# UID=1000
# GID=1000

# ROS Domain ID for multi-robot setups
ROS_DOMAIN_ID=0

# Container names (change if you want different names)
CONTAINER_NAME=ros-jazzy-container
IMAGE_NAME=rpi-ros-jazzy
IMAGE_TAG=latest

# Host directories for persistent data
# Uncomment and modify if you want different paths
# HOST_WORKSPACE=${HOME}/ros2_ws
# HOST_DATA=${HOME}/docker_data
# HOST_BAGS=${HOME}/ros2_bags

# Camera device indices (if you have multiple cameras)
CAMERA_INDEX=0

# Camera parameters
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30.0